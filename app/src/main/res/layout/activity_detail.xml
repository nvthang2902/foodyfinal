<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail">
    <LinearLayout
        android:id="@+id/toobar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="5"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_weight="0.5"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_weight="4"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Giảm 50%, thèm gì gọi nhé Nhà mang tơi..."></TextView>

        <ImageView
            android:id="@+id/img4"
            android:layout_weight="0.5"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/share"
            android:layout_marginRight="10dp"
            />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@id/toobar"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_toolbar"
                android:src="@drawable/giam50"
                android:layout_width="match_parent"
                android:layout_height="240dp"/>
            <TextView
                android:id="@+id/tilte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Giảm tới 50%, thêm gì gọi nhứ Nhà mang tới liền"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_margin="10dp"
                android:layout_below="@+id/img_toolbar"/>
            <TextView
                android:id="@+id/date"
                android:textColor="#3E3E3E"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7 tháng 12, 2020"
                android:layout_margin="10dp"
                android:layout_below="@id/tilte"/>
            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_margin="10dp"
                android:text="Hòa vào không khi dieu sale cuối năm, mời team ình nghỉ tay gọi món yêu thích, Nhà giảm 50% khi nhập mã  MERRY50 - để lên tinh thân săn sale thoãn thoắt cùng :"
                />
            <TextView
                android:id="@+id/loai1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text1"
                android:text="Trà sữa chân ái"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:drawableLeft="@drawable/checked"/>
            <TextView
                android:id="@+id/loai2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loai1"
                android:text="Trà sữa chân ái"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_back"/>
            <TextView
                android:id="@+id/loai3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loai2"
                android:text="Trà sữa chân ái"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:drawablePadding="5dp"
                android:gravity="center"
                android:drawableLeft="@drawable/ic_back"/>
            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loai3"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:text="Shipper Nhà rộn ràng chờ bạn đặt gaio liền tân nơi, chỉ 30 phút và Freeship luôn nha.\n Sướng nhất team săn sale rồi, order liên thôi !"
                />
            <View
                android:id="@+id/kengang"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_below="@id/text3"
                android:background="#000"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/kengang"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="20dp"
                android:layout_marginRight="10dp"
                android:text="*Hạn sự dụng ưu đãi : 08/12 - 12/12 \n * Ưu đãi giảm 50%, tối đa 40k ap dung cho Trà trái cây, Trà sữa,Macchiato. Không áp dụng cho bình giữ nhiệt, túi vải, ly sứ, ông hút inox, toping, các combo.\n *Ưu đãi áp dụng cho đơn hàng giao tận nơi, không áp dụng song song với chương trình khuyến mãi khác. \n *Ưu đãi có thể kết thúc sớm hơn dự kiến."
                />
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>